---
import "@styles/fonts.css";
---

<section>
	<div>
		<span>Hi, my name is</span>

		<h1>
			Parker Piedmont.
			<br />
			I write electronic music.
		</h1>

		<p>
			I'm a composer and producer in the Seattle area. I combine elements of
			synthwave, jazz, and EDM to tell a story.
		</p>

		<a href="#">Listen Now</a>
	</div>
</section>

<style lang="scss">
	@import url("https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap");
	@import url("https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap");

	section {
		display: flex;
		justify-content: center;
		align-items: center;
		min-height: 75vh;
		border-bottom: 2px solid #000;
		// border: none;
		color: #fff;
		background: linear-gradient(
			135deg,
			#1f005c,
			#5b0060,
			#870160,
			#ac255e,
			#ca485c,
			#e16b5c,
			#f39060,
			#ffb56b
		);
		// -webkit-mask: conic-gradient(
		// 		from -45deg at bottom,
		// 		#0000,
		// 		#000 1deg 89deg,
		// 		#0000 90deg
		// 	)
		// 	50%/80px 100%;
	}

	span {
		display: block;
		font-family: "IBM Plex Mono", monospace;
		font-size: 1.1rem;
	}

	h1 {
		margin: 0.5rem 0 1.5rem;
		font-family: "Inter", sans-serif;
		font-size: 4rem;
	}

	p {
		max-width: 450px;
		margin-bottom: 4rem;
		font-family: "Inter", sans-serif;
		font-size: 1.2rem;
		line-height: 1.5;
	}

	a {
		padding: 1rem 1.75rem;
		border: 1px solid #fff;
		font-family: "IBM Plex Mono", monospace;
		font-size: 1.2rem;
		text-decoration: none;
		color: inherit;

		&:hover {
			background: #000;
		}
	}
</style>
