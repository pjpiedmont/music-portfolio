---
import { getImage } from "astro:assets";
import parker from "@assets/tulips.jpeg";
const optimizedParker = await getImage({ src: parker });
---

<div id="outer" class="container full-width">
	<div class="img-container">
		<img src={optimizedParker.src} alt="Portrait of Parker Piedmont" />
	</div>

	<div class="container center-children">
		<div>
			<h1>
				<span id="intro">Hi, my name is</span>
				<br />
				<span id="name">Parker Piedmont.</span>
				<br />
				<span id="job-description">I write electronic music.</span>
			</h1>

			<p>
				I'm a composer and producer in the Seattle area. I combine elements of
				synthwave, jazz, and EDM to tell stories.
			</p>

			<a href="#goto">
				<i class="bi bi-arrow-down"></i>
				Listen Now
				<i class="bi bi-arrow-down"></i>
			</a>
		</div>
	</div>
</div>

<style lang="scss">
	@import url("https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap");
	@import url("https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap");

	#outer {
		flex-direction: column;
		min-height: min(75vh, 500px);
		padding: 0;
		color: #fff;
		font-size: 16px;
		background: linear-gradient(135deg, #170044, #510055);
	}

	.img-container {
		width: 100%;
		max-height: 600px;
		overflow: hidden;
	}

	img {
		display: block;
		min-width: 100%;
		min-height: 100%;
		// width: 100%;
		// max-height: 600px;
		object-fit: cover;
		border: none;
		--m: conic-gradient(
				from -45deg at bottom,
				#0000,
				#000 1deg 89deg,
				#0000 90deg
			)
			50%/3rem 100%;
		-webkit-mask: var(--m);
		mask: var(--m);
	}

	div.container.center-children {
		flex-grow: 1;
		padding: 0 2rem 3rem 2rem;
	}

	h1 {
		margin: 3rem 0 1rem;
		font-size: 1rem;
	}

	#intro {
		display: inline-block;
		margin-bottom: 1rem;
		font-family: "IBM Plex Mono", monospace;
		font-size: 1rem;
		font-weight: 400;
		color: #ff6fe7;
	}

	#name {
		font-family: "Inter", sans-serif;
		font-size: 2.5rem;
		word-spacing: 0.1rem;
		text-shadow: 0 0.25rem 1rem rgba(0, 0, 0, 0.5);
	}

	#job-description {
		color: #f3c6ac;
		font-family: "Inter", sans-serif;
		font-size: 2.5rem;
		word-spacing: 0.1rem;
		text-shadow: 0 0.25rem 1rem rgba(0, 0, 0, 0.5);
	}

	p {
		max-width: 19rem;
		margin-bottom: 2rem;
		font-family: "Inter", sans-serif;
		font-size: 1.125rem;
		line-height: 1.5;
	}

	a {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		border: 0.1rem solid #ff6fe7;
		font-family: "IBM Plex Mono", monospace;
		font-size: 1.125rem;
		text-decoration: none;
		color: #ff6fe7;

		&:hover {
			background: #ff6fe7;
			color: #000;
		}
	}

	@media screen and (min-width: 400px) {
	}

	@media screen and (min-width: 576px) {
	}

	@media screen and (min-width: 768px) {
		div.container.center-children {
			padding: 3rem;
		}

		h1 {
			margin-top: 0;
		}
	}

	@media screen and (min-width: 992px) {
		#outer {
			flex-direction: row;
		}

		div.container.center-children {
			padding: 5rem;
		}

		.img-container {
			max-width: 37%;
			max-height: 100%;
		}

		img {
			min-width: calc(100% + 1px);
			// max-width: 37%;
			// max-height: 100%;
			--m: conic-gradient(
					from -135deg at right,
					#0000,
					#000 1deg 89deg,
					#0000 90deg
				)
				right/100% 3rem repeat-y;
			-webkit-mask: var(--m);
			mask: var(--m);
		}
	}

	@media screen and (min-width: 1200px) {
	}

	@media screen and (min-width: 1400px) {
	}

	@media screen and (min-width: 2000px) {
	}

	@media screen and (min-width: 3000px) {
	}
</style>
